@model MeuMedico.Medicos
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Home", FormMethod.Post,
                             new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<div class="row">
    <div class="card text-center col-6 mx-auto p-0">
        <div class="card-header">
            <h2>Cadastro de Médicos</h2>
        </div>
        <div class="card-body p-5">
            <form class="row">
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group row">
                        @Html.LabelFor(model => model.CRM, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.CRM, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CRM, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Endereco, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Endereco, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Endereco, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Bairro, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Bairro, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Bairro, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.IDCidade, "Cidade", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("IDCidade", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IDCidade, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.AtendePorConvenio, "Atende por convênio", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.AtendePorConvenio, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AtendePorConvenio, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.TemClinica, "Possui clínica", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.TemClinica, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TemClinica, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.WebSiteBlog, "Website/Blog", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.WebSiteBlog, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.WebSiteBlog, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.IDEspecialidade, "Especialidade", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("IDEspecialidade", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IDEspecialidade, "", new { @class = "text-danger" })
                    </div>

                    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-outline-secondary" })
                    <button class="btn btn-outline-success" type="submit">Cadastrar</button>
                </div>
            </form>
        </div>
    </div>
</div>
}