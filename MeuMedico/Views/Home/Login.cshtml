@model MeuMedico.Usuarios

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
<div class="card text-center col-6 mx-auto p-0">
    <div class="card-header">
        <h2>Login</h2>
    </div>
    <div class="card-body ">
        <form>
            <div class="form-horizontal">
                <hr />
                <div class="form-group">
                    @Html.LabelFor(a => a.Usuario, "Usuario", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(a => a.Usuario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(a => a.Usuario)
                </div>
                <div class="form-group">
                    @Html.LabelFor(a => a.Senha, "Senha", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(a => a.Senha, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(a => a.Senha)
                </div>
                <button type="submit" class="btn btn-outline-success">Entrar</button>
            </div>
        </form>
    </div>
</div>
}

